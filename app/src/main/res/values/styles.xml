<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimary">@color/lightgreybackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/meu_tema</item>
    </style>
    

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="meu_tema">
        <item name="logo">@drawable/kiss_logo_2</item>
        <item name="android:logo">@drawable/kiss_logo_2</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">8dp</item>
    </style>

    <style name="padraoTextView" >
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="meu_switch" >
        <item name="android:state_checked">@color/red</item>
    </style>



    <style name="tituloTextView" >
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtituloTextView" >
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="padraoTextViewWhite" parent="padraoTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">27dp</item>
        <item name="android:textColor">@color/lightgreybackground</item>
        <item name="android:textColorHint">@color/lightgreybackground</item>
        <item name="android:textSize">14sp</item>
    </style>


    style="@style/padraoTextView"
    android:textColor="@android:color/primary_text_light"
    android:textSize="24sp"
    android:textStyle="bold"


</resources>